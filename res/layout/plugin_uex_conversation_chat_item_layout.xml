<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <include
        android:id="@+id/chat_info_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        layout="@layout/plugin_uex_conversation_chat_info_layout"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/msg_content_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/send_failed_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="！"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/red"
                android:layout_gravity="center_vertical"
               />
            <TextView
                android:id="@+id/msg_voice_time_left_tv"
                android:text="1''"
                android:gravity="center"
                android:background="@drawable/plugin_uexconversation_msg_time_bg"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="#ff4800"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/msg_txt"
                android:layout_width="wrap_content"
                android:textColor="#696969"
                android:textSize="16sp"
                android:gravity="center_vertical|left"
                android:background="@drawable/plugin_uexconversation_text_right_bg"
                android:text="快到家了记得和妈"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/msg_voice_time_right_tv"
                android:text="1''"
                android:gravity="center"
                android:background="@drawable/plugin_uexconversation_msg_time_bg"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textColor="#ff4800"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/send_failed_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:text="！"
                android:layout_marginTop="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/red"/>

        </LinearLayout>
        <TextView
            android:id="@+id/time_tv"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="05-15 17:08"
            android:textColor="#ff4800"
            android:textSize="12sp"/>
    </LinearLayout>
    <include
        android:id="@+id/chat_info_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        layout="@layout/plugin_uex_conversation_chat_info_layout"/>

</LinearLayout>